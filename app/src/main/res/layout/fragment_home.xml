<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".SearchedProducts">

            <TextView
                android:id="@+id/mais_procurados_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:shadowRadius="30"
                android:text="@string/more"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/gridview_mainPage_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mais_procurados_textView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/backgroundcolor"
                android:columnWidth="70dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:padding="6dp"
                android:verticalSpacing="10dp">

            </GridView>

            <TextView
                android:id="@+id/catgorias_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gridview_mainPage_1"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:shadowRadius="30"
                android:text="@string/categoria"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/gridview_mainPage_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catgorias_textView"
                android:columnWidth="70dp"
                android:gravity="center"
                android:background="@drawable/backgroundcolor"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:padding="6dp"
                android:verticalSpacing="8dp">

            </GridView>

        </RelativeLayout>
</FrameLayout>